{
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "arrowParens": "always",
    "semi": false,
    "trailingComma": "none",
    "endOfLine": "crlf",
    "printWidth": 90,
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "bracketSpacing": true,
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^api/(.*)$",
        "^app/(.*)$",
        "^assets/(.*)$",
        "^components/(.*)$",
        "^config/(.*)$",
        "^context/(.*)$",
        "^hooks/(.*)$",
        "^lib/(.*)$",
        "^pages/(.*)$",
        "^providers/(.*)$",
        "^store/(.*)$",
        "^types/(.*)$",
        "^utils/(.*)$",
        "^../(.*)",
        "^./(.*)",
        "(.css)$",
        "(.scss)$"
    ]
}
